@using EntityLayer.Concrete
@model List<Worker>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>T.C Numarası</th>
        <th>Çalıştığı Şirket</th>


    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.WorkerID</td>
    <td>@item.Name</td>
    <td>@item.Surname</td>
    <td>@item.TC</td>
    <td>@item.CompanyName</td>
    <td><a href="/Worker/DeleteWorker/@item.WorkerID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Worker/EditWorker/@item.WorkerID" class="btn btn-success">Güncelle</a></td>
</tr>
    }
</table>
<br />
<a href="/Worker/AddWorker" class="btn btn-info">Ekle</a>